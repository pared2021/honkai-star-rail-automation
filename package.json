{
  "name": "xingtie",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 1000",
    "preview": "vite preview",
    "check": "tsc --noEmit && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:real-game": "tsx scripts/run-real-game-test.ts",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:start\"",
    "electron:start": "tsc electron/main.ts --outDir dist-electron && tsc electron/preload.ts --outDir dist-electron && electron dist-electron/main.js",
    "electron:build": "npm run build && tsc electron/main.ts --outDir dist-electron && tsc electron/preload.ts --outDir dist-electron && electron-builder",
    "electron:pack": "npm run build && tsc electron/main.ts --outDir dist-electron && tsc electron/preload.ts --outDir dist-electron && electron-builder --dir",
    "api:dev": "tsc --project tsconfig.api.json && node dist-api/api/index.js",
    "api:build": "tsc --project tsconfig.api.json"
  },
  "dependencies": {
    "@types/electron": "^1.4.38",
    "active-win": "^8.2.1",
    "antd": "^5.21.0",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "express": "^4.21.2",
    "jimp": "^1.6.0",
    "lucide-react": "^0.511.0",
    "node-window-manager": "^2.2.4",
    "pixelmatch": "^7.1.0",
    "ps-list": "^8.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.3.0",
    "recharts": "^3.1.2",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.2",
    "sharp": "^0.34.3",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "tesseract.js": "^6.0.1",
    "uuid": "^10.0.0",
    "zustand": "^5.0.3"
  },
  "main": "dist-electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.xingtie.automation",
    "productName": "崩坏星穹铁道自动化程序",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "dist-api/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.games"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.0",
    "@types/ps-list": "^6.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@vercel/node": "^5.3.6",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-dev-locator": "^1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jest": "^30.1.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-trae-solo-badge": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.4"
  }
}
